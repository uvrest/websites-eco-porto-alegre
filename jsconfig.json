{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@uverest/config/*": [
                "packages/config/*"
            ],
            "@uverest/shared/*": [
                "packages/shared/*"
            ],
            "@uverest/themes/*": [
                "packages/themes/*"
            ],
            "@uverest/design-system/*": [
                "packages/design-system/*"
            ],
            "@uverest/services/*": [
                "packages/services/*"
            ],
            "@uverest/utils/*": [
                "packages/utils/*"
            ],
            "@website/*": [
                "apps/website/src/*"
            ],
            "@portal/*": [
                "apps/portal/src/*"
            ]
        },
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "allowJs": true,
        "checkJs": false,
        "noEmit": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true
    },
    "include": [
        "apps/**/*",
        "packages/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/dist",
        "**/.turbo",
        "**/.cache"
    ]
}